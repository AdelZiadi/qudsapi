<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity Project.
    -->
    <changeSet id="20240521125522-1" author="jhipster">
        <createTable tableName="project">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uid" type="varchar(11)">
                <constraints nullable="true" unique="true" uniqueConstraintName="ux_project__uid" />
            </column>
            <column name="code" type="varchar(255)">
                <constraints nullable="true" unique="true" uniqueConstraintName="ux_project__code" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="created" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="last_updated" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="displayed" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="app_order" type="integer">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="project" columnName="created" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="project" columnName="last_updated" columnDataType="${datetimeType}"/>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->
</databaseChangeLog>
